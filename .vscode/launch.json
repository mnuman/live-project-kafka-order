    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/app",
            "args": [
                "main:app",
                "--port",
                "8080",
                "--reload"
            ],
            "env": {
                "APP_NAME": "VS-Code debugging",
                "KAFKA_TOPIC_NAME": "test",
                "KAFKA_BOOTSTRAP_BROKERS": "broker:29092"
            },
            "jinja": true,
            "justMyCode": false
        }
    ]
}